<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="match_parent" android:weightSum="1">
	<LinearLayout android:id="@+id/linearLayout1"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Title of annotation"
			android:layout_marginBottom="10dp" android:layout_marginTop="10dp"
			android:id="@+id/title" android:textSize="20sp" />
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<Button android:layout_height="wrap_content" android:text="Comment"
				android:id="@+id/comment" android:layout_width="wrap_content">
			</Button>
			<Button android:layout_height="wrap_content" android:text="Rate up"
				android:id="@+id/rate_up" android:layout_width="wrap_content">
			</Button>
			<Button android:layout_height="wrap_content" android:text="Rate down"
				android:id="@+id/rate_down" android:layout_width="wrap_content">
			</Button>
		</LinearLayout>
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="by [USER_NAME]"
			android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
			android:id="@+id/author" android:textStyle="italic" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Body of annotation"
			android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
			android:id="@+id/body" />
	</LinearLayout>
</ScrollView>
