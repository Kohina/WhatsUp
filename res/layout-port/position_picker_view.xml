<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="match_parent"
		android:layout_height="50dp">

		<Button 
			android:id="@+id/select_position"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:drawableLeft="@drawable/ok">
		</Button>
	</LinearLayout>

	<FrameLayout android:layout_height="match_parent"
		android:id="@+id/mapFrameLayout" android:layout_width="match_parent">

		<com.google.android.maps.MapView
			android:id="@+id/position_picker_mapview" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:clickable="true"
			android:apiKey="01FhLVuIitwD0L9WnwXjUpwSzRZ99x4pQzZkcKA" />

	</FrameLayout>
</LinearLayout>
